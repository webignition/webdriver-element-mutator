{
    "name": "webignition/webdriver-element-mutator",
    "description": "Convenience methods for setting values on a Facebook\\WebDriver\\WebDriverElement instance",
    "keywords": ["webdriver", "webdriver-element", "mutator"],
    "homepage": "https://github.com/webignition/webdriver-element-mutator",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\WebDriverElementMutator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\WebDriverElementMutator\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs": "./vendor/bin/phpcs src tests --colors --standard=PSR12",
        "static-analysis": "./vendor/bin/phpstan analyse --ansi",
        "test": "./vendor/bin/phpunit --colors=always",
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ]
    },
    "require": {
        "php": ">=7.4",
        "ext-mbstring":"*",
        "webignition/web-driver-element-collection": ">=0.8,<1",
        "php-webdriver/webdriver": "^1.8"
    },
    "require-dev": {
        "mockery/mockery": "^1.4",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^0.12.77",
        "phpstan/phpstan-mockery": "^0.12.12",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "3.*",
        "webignition/base-panther-test-case": ">=0.9,<1",
        "webignition/php-dom-element-locator": ">=0.4,<1",
        "webignition/symfony-panther-dom-crawler-navigator": ">=0.18,<1",
        "webignition/webdriver-element-inspector": ">=0.8,<1"
    },
    "config": {
        "sort-packages": true
    }
}
