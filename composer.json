{
    "name": "webignition/webdriver-element-mutator",
    "description": "Convenience methods for setting values on a Facebook\\WebDriver\\WebDriverElement instance",
    "keywords": ["webdriver", "webdriver-element", "mutator"],
    "homepage": "https://github.com/webignition/webdriver-element-mutator",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\WebDriverElementMutator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\WebDriverElementMutator\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs": "./vendor/bin/phpcs src tests --colors --standard=PSR12",
        "static-analysis": "./vendor/bin/phpstan analyse src tests --level=7",
        "test": "./vendor/bin/phpunit --colors=always",
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ]
    },
    "require": {
        "php": ">=7.2",
        "ext-mbstring":"*",
        "facebook/webdriver": "^1.7.1",
        "webignition/web-driver-element-collection": ">=0.6,<1"
    },
    "require-dev": {
        "phpunit/phpunit": "~8.0",
        "squizlabs/php_codesniffer": "3.*",
        "phpstan/phpstan": "^0.12",
        "mockery/mockery": "^1.2",
        "phpstan/phpstan-mockery": "^0.12",
        "webignition/symfony-panther-dom-crawler-navigator": ">=0.13,<1",
        "webignition/php-dom-element-locator": ">=0.1,<1",
        "webignition/webdriver-element-inspector": ">=0.6,<1",
        "webignition/base-panther-test-case": "^0.1.0"
    }
}
